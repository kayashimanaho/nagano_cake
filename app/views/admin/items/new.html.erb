<div class ="container">
  
 
<h3><span style="background-color: silver;">商品新規登録</span></h3>
  <%= form_with url: admin_items_path,model: @item do |f| %>
  <table border="0" cellpadding="11" cellspacing="0" width="60%">
    <tr><th>商品画像</th><td><%= f.file_field :image, accept: "image/*" %></td></tr>
    <tr><th>商品名</th><td><%= f.text_field :name %></td></tr>
    <tr><th>商品説明</th><td><%= f.text_area :introduction %></td></tr>
    <tr><th><%= f.label :genre_id, 'ジャンル' %></th><td><%= f.select :genre_id, {'焼き菓子':1,'キャンディー':2,'ケーキ':3,'アイス':4}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %></td></tr>
    <tr><th>税抜価格</th><td><%= f.number_field :price %>円</td></tr>
    <tr><th>販売ステータス</th><td><%= f.label :is_active, '販売中', value: 1 %>
        <%= f.radio_button :is_active, '1' %>
      <%= f.label :is_active, '販売停止中', value: 0 %>
        <%= f.radio_button :is_active, '0' %>
    <%= f.submit '新規登録', class: "btn btn-success" %></td></tr>
  <% end %>
  </table>

 
</div>
