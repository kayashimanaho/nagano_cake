<div class ="container">
  <h3><span style="background-color: silver;">商品編集</span></h3>
    <%= form_with model: @item, url: admin_item_path do |f| %><br>
      <label for="inputImage">商品画像</label>
        <%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %><br>
      <label for="inputName">商品名</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
      
      <label for="inputIntroduction">商品説明</label>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"商品説明"%><br>
        
      <label for="inputIntroduction">ジャンル</label>
      <%= f.select :genre_id, {'ケーキ':1,'プリン':2,'焼き菓子':3,'キャンディ':4},autofocus: true, id:"inputGenre", placeholder:"ジャンル"%><br>
      
      <label for="inputPrice">税抜価格</label>
        <%= f.number_field :price, autofocus: true, id:"inputPrice", placeholder:"税抜価格"%>円<br>
      <label for="inputIs_active">販売ステータス</label>
      <%= f.radio_button :is_active, '1', autofocus: true, id:"inputIs_active", placeholder:"販売ステータス"%>
        <%= f.label :is_active, '販売中', value: 1 %>
      
      <%= f.radio_button :is_active, '0', autofocus: true, id:"inputIs_active", placeholder:"販売ステータス"%>
        <%= f.label :is_active, '販売停止中', value: 0 %><br>
      
        
        <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>
</div>