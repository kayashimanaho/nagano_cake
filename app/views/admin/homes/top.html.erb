<div class ="container">
  <h3><span style="background-color: silver;">注文履歴一覧</span></h3>
  
 
    <table border="0" cellpadding="11" cellspacing="0" width="95%">
    <thead style="background:lightgray">
      <tr>
        <th width="20%">購入日時</th>
        <th>購入者</th>
        <th width="20%">注文個数</th>
        <th width="20%">注文ステータス</th>
     </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to, order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) do %></td>
      <% end %>
      <td><%= order.name %></td>
      <td><%#= order.amount %></td>
      <!--td>%=注文ステータス入れたい  %></td>-->
    </tr>
    <% end %>
  </tbody>
  </table>
 
</div>
</div>
