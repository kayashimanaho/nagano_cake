<div class ="container">
  <h3><span style="background-color: silver;"><%= @customer.full_name %>さんの会員情報編集</span></h3>
    <%= form_with model: @customer, url: admin_customer_path do |f| %><br>
      <label for="inputId">会員ID</label>
      <%= @customer.id %><br>
      <!--%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>-->
      
      <label for="inputLast_name">氏名</label>
        <%= f.text_field :last_name, autofocus: true, id:"inputName" %>
        <%= f.text_field :first_name, autofocus: true, id:"inputName" %><br>
      <label for="inputLast_name">フリガナ</label>
        <%= f.text_field :last_name_kana, autofocus: true, id:"inputName" %>
        <%= f.text_field :last_name_kana, autofocus: true, id:"inputName" %><br>
        
      <label for="inputPostal_code">郵便番号</label>
        <%= f.text_field :postal_code, autofocus: true, id:"inputpostal_code" %><br>
        
      <label for="inputAddress">住所</label>
        <%= f.text_field :address, autofocus: true, id:"address" %><br>
      
      <label for="inputTelephone_number">電話番号</label>
        <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number" %><br>
        
      <label for="inputEmail">メールアドレス</label>
        <%= f.text_field :email, autofocus: true, id:"inputEmail" %><br>
        
      <label for="inputIs_deleted">会員ステータス</label>
      <%= f.radio_button :is_deleted, '1', autofocus: true, id:"inputIs_deleted" %>
        <%= f.label :is_deleted, '退会', value: 1 %>
      
      <%= f.radio_button :is_deleted, '0', autofocus: true, id:"inputIs_deleted" %>
        <%= f.label :is_deleted, '有効', value: 0 %><br>
      
        
        <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>
</div>
