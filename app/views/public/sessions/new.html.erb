<div class="container text-center">
<h4>ログイン</h4>

<h6>会員の方はこちらからログイン</h6>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" ,size: 40%>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "current-password",size: 40 %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",class: "btn btn-success" %>
  </div>
<% end %>

<h6>会員登録がお済みでない方</h6>
<a><%= link_to "こちら",new_customer_registration_path %>から新規登録してね</a>

</div>
