
 <div class ="container-fluid">
    <div class="row">
      <div class="col-md-4">
      <h2><strong>商品一覧</strong></h2><p>(全x件)</p>
        <div class="card" style="width: 18rem;">
          <div class="card-header">
            ジャンル検索</div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">ケーキ</li>
                  <li class="list-group-item">焼き菓子</li>
                  <li class="list-group-item">プリン</li>
                  <li class="list-group-item">キャンディー</li>
              </ul>
        </div>
      </div>
    <div class="col-md-8">
   
      <div class="row">
      <% @items.each do |item| %>
        <div class="card col-md-3">
          <%= link_to item_path(item.id) do %>
          <% if item.image.attached? %>
            <%= image_tag item.image ,size: "230x150" %>
          <% else %>
            <%= image_tag "no_image.jpeg",size: "230x150" %>
          <% end %>
          <div class="card-body">
            <p class="card-text"><%= item.name %></p>
            <p class="card-text">¥<%= (item.price.to_s(:delimited)) %></p>
            <% end %>
            
          </div>
        </div>
      <% end %>
      </div>
    
  </div>
  </div>
  </div>