<div class ="container">
  <h3><span style="background-color: silver;">配送先編集</span></h3>
  
   <%= form_with model: @address, url: address_path(@address.id),method: :patch do |f| %><br>
    <div class="row mb-3">    
      <label for="inputPostal_code">郵便番号(ハイフンなし)</label>
      <div class="col-sm-5">
        <%= f.text_field :postal_code, autofocus: true, id:"inputpostal_code" %><br>
      </div>
    </div>
    
    <div class="row mb-3">
      <label for="inputAddress">住所</label>
      <div class="col-sm-10">
        <%= f.text_field :address, autofocus: true, id:"address",size: 50 %><br>
      </div>
    </div>
    
    <div class ="row">
      <div class ="col-8">    
      <label for="inputName">宛名</label>
        <%= f.text_field :name, autofocus: true, id:"inputName" %>
      </div>
      <div class ="col-4">
       <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      </div>
    </div>   
<% end %>
  
  </div>