<div class ="container">
  <h3><span style="background-color: silver;">配送先登録/一覧</span></h3>
  
  
  <%= form_with url: addresses_path,model: @address do |f| %>
    <a>郵便番号(ハイフンなし)</a>
      <%= f.text_field :postal_code, placeholder:"0000000" %><br>
    <a>住所</a>
      <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0" %><br>
    <a>宛名</a>
      <%= f.text_field :name, placeholder:"令和道子" %>
      <%= link_to "新規登録", addresses_path,class: "btn btn-success" %>
  <% end %>



</div>